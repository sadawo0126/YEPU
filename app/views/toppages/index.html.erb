<% if logged_in? %>
  <div class="row">
    <div class="col-sm-8">
      <%= render 'posts/posts', posts: @posts %>
    </div>
    
    
    <%= form_with(url: root_path, method: :get, local: true) do |f| %>
    <%= f.select :genre, ['eat', 'exercise', 'beauty', 'feed', 'all'], {include_blank: '選択ボックス'}, class: 'form-control' %>
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_with(url: root_path, method: :get, local: true) do |f| %>
      <%= f.submit '全ジャンル表示', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    
    <p><%= link_to '投稿する', posts_path %></p>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>「キレイ」も「悩み」もシェアするなら？</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>