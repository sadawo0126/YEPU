<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="container">
          <div class="row">
            <div class="col-sm-1 mb-2">
              <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
            </div>
            <div class="col-sm-11 mb-2">
              <%= user.name %>
              <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>